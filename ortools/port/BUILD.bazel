    name = "sysinfo",
    srcs = ["sysinfo.cc"],
    hdrs = ["sysinfo.h"],
    deps = ["//ortools/base/macros:os"],
)

cc_test(
    name = "sysinfo_test",
    srcs = ["sysinfo_test.cc"],
    deps = [
        ":sysinfo",
        "//ortools/base:gmock_main",
        "//ortools/base/macros:os",
